<!-- updatecontact.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update page" }) %>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="update">
      <h2>Update Contact</h2>
      <form action="/single-contact/<%= contact._id %>?_method=PUT" method="POST">
        <label>FirstName:</label>
        <input type="text" value="<%= contact.firstName %>" id="firstName" name="firstName" required />

        <label for="lastName">lastName:</label>
        <input type="text" id="lastName" name="lastName" required value="<%= contact.lastName %>" />

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"  required value="<%= contact.email %>" />

        <label for="phone">Phone:</label>
        <input type="number" id="phone" name="phone" required value="<%= contact.phone %>" />

        <label for="address">Address:</label>
        <textarea id="address" name="address" rows="4" required><%= contact.address %></textarea>

        <button type="submit">Update Contact</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>